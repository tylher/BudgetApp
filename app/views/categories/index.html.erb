<div class="w-full h-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <%= render partial:"shared/navbar", locals:{page: 'CATEGORIES'} %>

  <div id="categories" class="min-w-full px-6 py-10 sm:px-20 md:px-32">
    <%= render @categories %>
    <%= link_to 'New category', new_category_path, class: "rounded-lg py-3 px-5 bg-blue-400 text-white block font-medium inline-block mt-5" %>
  </div>
  
</div>
